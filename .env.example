# Environment configuration for Dear Diary backend
# Copy this file to `.env` and replace the values as needed.

DATABASE_URL=postgresql://user:password@localhost:5432/dear_diary_db
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
SECRET_KEY=changeme

# Spotify API credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# OpenRouter API key
OPENROUTER_API_KEY=your_openrouter_api_key

# Optional model overrides
GENERATOR_MODEL_NAME=openrouter-default
PLANNER_MODEL_NAME=openrouter-default

# Application identity
APP_NAME=Dear Diary
APP_SITE_URL=http://localhost

# Deployment configuration
SENTRY_DSN=
ENVIRONMENT=development
ALLOWED_ORIGINS=http://localhost:3000

# Celery/Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379

# Database container settings (if using docker-compose)
POSTGRES_USER=dear_diary_user
POSTGRES_PASSWORD=supersecretpassword
POSTGRES_DB=dear_diary_db
